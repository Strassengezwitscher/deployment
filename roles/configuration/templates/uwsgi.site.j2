[uwsgi]
chdir           = {{ project_path }}/{{ item }}/strassengezwitscher
module          = strassengezwitscher.wsgi:application
{% if item == "strassengezwitscher_dev" %}
env             = DJANGO_SETTINGS_MODULE=strassengezwitscher.settings.production
{% else %}
env             = DJANGO_SETTINGS_MODULE=strassengezwitscher.settings
{% endif %}
virtualenv      = {{ project_path }}/{{ item }}/venv
socket          = {{ sockets_path }}/{{ item }}.sock
chmod-socket    = 664
processes       = 4
threads         = 2
master          = True
pidfile         = {{ pids_path }}/{{ item }}.pid
vacuum          = True
max-requests    = 5000
stats           = {{ sockets_path }}/{{ item }}_stats.sock
memory-report   = True
req-logger      = file:{{ logs_path }}/{{ item }}/requests.log
logger          = file:{{ logs_path }}/{{ item }}/app.log
harakiri        = 30
